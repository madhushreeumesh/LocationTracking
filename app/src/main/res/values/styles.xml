<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--customer no action bar theme-->
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/MycolorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>

    </style>


    <style name="EmployeeThemeNoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/EmployeeListColorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="ManagerRegisterTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorEmpListToolbarBG</item>
        <item name="colorPrimaryDark">@color/EmployeeListColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorEmpListBG</item>
    </style>

    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="colorAccent">@color/primary_dark</item>
    </style>


    <style name="AppThemeCustom" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorEmpListToolbarBG</item>
        <item name="colorPrimaryDark">@color/EmployeeListColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
